<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LanguageCoachApp.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Speech Recognition"
               FontSize="24"
               HorizontalOptions="Center"
               FontAttributes="Bold"/>

            <Frame Padding="10" BorderColor="Gray" CornerRadius="10">
                <ScrollView>
                    <Label
                Text="{Binding RecognitionText}"
                FontSize="18"
                HorizontalOptions="Center" />
                </ScrollView>
            </Frame>
            <Button Text="Start Listening"
                Clicked="Listen"
                BackgroundColor="Green"
                TextColor="White"/>
            <Button Text="Stop Listening"
                Clicked="StopListening"
                BackgroundColor="Red"
                TextColor="White"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
